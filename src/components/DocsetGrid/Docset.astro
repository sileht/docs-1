---
const { title, description, path } = Astro.props;
---

<div class="container">
    <a href=`${import.meta.env.BASE_URL}${path}`>
		<h4>
			{!!Astro.props.icon && <Astro.props.icon />}
			<span>{title}</span>
		</h4>
	</a>
	{description && <p>{description}</p>}
</div>

<style lang="scss">
	.container {
		border: 1px solid var(--chakra-colors-chakra-border-color);
		padding: 24px;
		border-radius: 6px;
	}

	a {
		text-decoration: none;
	}

	h4 {
		display: flex;
		align-items: center;

		svg {
			margin-right: 8px;
		}
	}
</style>
